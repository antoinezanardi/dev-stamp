{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": false,
    "outDir": "./dist",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@config/*": [
        "./config/*"
      ],
      "@tests/*": [
        "./tests/*"
      ],
    },
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "types": [
      "vitest/globals",
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "eslint.config.ts",
    "release.config.mjs",
    "src/**/*",
    "config/**/*",
    "tests/**/*",
  ],
}